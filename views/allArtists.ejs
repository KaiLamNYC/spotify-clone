<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/allArtists.css">

    <title>All Artists</title>
</head>
<body>
    <%- include("./partials/navbar") %>
    <a href="/createArtist">create artist</a>

    <% artists.forEach((artist) => { %>

        <div class="artist-card">
            <img src="<%=artist.Img%>" alt="Artist image">
            <div class="artist-info">
              <h3>
                <a href="/artist/<%=artist._id%>">
                    <%=artist.Name%>
                </a>
              </h3>
              <p>Followers: <%=artist.Followers%></p>
              <button class="favorite-button" id="<%=artist._id%>">
                ‚ù§
              </button>
              <button class="minus-button" id="<%=artist._id%>">remove</button>
            </div>
          </div>
          

        <%})%>
    <script src="/js/allArtists.js"></script>
</body>
</html>